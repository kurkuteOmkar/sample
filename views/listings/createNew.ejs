<% layout ("/layouts/boilerplate.ejs") -%>
<body>
    <br><br>
    <h1>Create a New listing</h1>
    <div class="row">
        <div class="col-8">
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div  class="mb-3">
            <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" placeholder="enter title" name="listing[title]" required>
          <div class="invalid-feedback">Please enter Title</div>
          <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
             <textarea rows="5" cols="20" name="listing[description]" class="form-control" placeholder="Add Description of the Place" required></textarea>
             <div class="invalid-feedback">Please enter the location</div>
        </div>
        <div class="mb-3">
     <label for="image" class="form-label">Image URL/Link</label>
        <input type="file" name="listing[image][url]" class="form-control" required>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
<input type="text" name="listing[price]" placeholder="12,00" class="form-control" required>
<div class="invalid-feedback">Price should be valid</div>
</div>
<div class="mb-3 col-md-8">
    <label for="country" class="form-label">Country</label>
    <input type="text" name="listing[country]" class="form-control" placeholder="India" required>
    <div class="invalid-feedback">Please enter the country</div>
        </div>
    </div>
        <div class="mb-3 ">
<label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Pune/Maharastra" class="form-control" required>
            <div class="invalid-feedback">Please enter the location</div>
        </div>
        <div class="mb-3">
            <br>
<button class="btn btn-dark add-btn">Add</button>
        </div>
    </div>
    </form>
</div>
</body>
</html>